name: Run Snakemake Workflow

on:
  push:
    branches:
      - master
  pull_request:
    branches:
      - master

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        
      - name: Create .env file
        run: |
          echo "ECMWF_TOKEN=${{ secrets.ECMWF_TOKEN }}" > .env
        
      - name: Set up Apptainer
        uses: eWaterCycle/setup-apptainer@v2
        
        # Run Snakemake w/o GloFAS downloading (otherwise it takes ages)
      - name: Run Snakemake workflow
        uses: snakemake/snakemake-github-action@v2
        with:
          directory: '.'
          snakefile: 'Snakefile'
          args: '--use-singularity --cores 1 --allowed-rules apptainer_build read_discharge cv_glofas cv_results glofas_correction correction_check ts_plot trend_analysis'
